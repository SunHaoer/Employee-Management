@model IEnumerable<EmployeeManagementMVC.Models.Employee>

@{
    ViewData["Title"] = "Login";
}

<h2>Index</h2>

<form asp-controller="EmployeesLogin" asp-action="Login">
    <p>
        Username(FirstName): <input type="text" name="username" required>
    </p>
    <p>
        Password(LastName): <input type="password" name="password" required>
    </p>
    <p>
        <input type="submit" value="Submit" />
    </p>
</form>